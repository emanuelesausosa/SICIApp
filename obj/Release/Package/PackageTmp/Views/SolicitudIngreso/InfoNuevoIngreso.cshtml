                @Html.EditorFor(model => model.OBSERVACIONES)
                @Html.ValidationMessageFor(model => model.OBSERVACIONES)
            </div>
        </div>               

        <div class="form-group">
            @Html.LabelFor(model => model.IDCRENTROTERAPEUTICO, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IDCRENTROTERAPEUTICO", null, htmlAttributes: new { @class="control-form"})
                @Html.ValidationMessageFor(model => model.IDCRENTROTERAPEUTICO)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
