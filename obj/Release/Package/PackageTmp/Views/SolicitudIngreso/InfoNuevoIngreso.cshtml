                @Html.EditorFor(model => model.NUMEXPEDIENTE)
                @Html.ValidationMessageFor(model => model.NUMEXPEDIENTE)
            </div>
        </div>        

        <div class="form-group">
            @Html.LabelFor(model => model.OBSERVACIONES, new { @class = "control-label col-md-2" })
