@model SICIApp.Models.FICHAMODEL

@{
    ViewBag.Title = "NuevaFicha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>NuevaFicha</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Solicitudes", "Solicitudes")
            </li>
            <li class="active">
                <strong>Nueva Ficha</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
			@Html.ActionLink("Todas", "Solicitudes", null, new { @class = "btn btn-primary"})
        </div>
    </div>
</div>



