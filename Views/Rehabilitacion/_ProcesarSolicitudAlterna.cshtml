@model SICIApp.Models.INGRESOMODEL


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title">¿Está seguro de procesar este ingreso?</h4>
    <small class="font-bold">Si está seguro, por favor haga clic en "Procesar" para enviar la solicitud</small>
</div>

@using (Ajax.BeginForm("ProcesarSolicitudAlterna", "Rehabilitacion", FormMethod.Post, new AjaxOptions
                {
                    InsertionMode = InsertionMode.Replace,
                    HttpMethod = "POST",
                    UpdateTargetId = "table-elements"
                }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="modal-body">
            @Html.ValidationSummary(true)

            @Html.HiddenFor(model => model.ID)
            @Html.HiddenFor(model => model.actionName)

            <dl class="dl-horizontal">
                <dt>
                    PACIENTE
                </dt>
                <dd>
                    @Model.FICHA.PRIMERNOMBRE @Model.FICHA.PRIMERAPELLIDO
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.NUMEXPEDIENTE)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NUMEXPEDIENTE)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.FECHAINGRESOSISTEMA)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FECHAINGRESOSISTEMA)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.OBSERVACIONES)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.OBSERVACIONES)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.IDCRENTROTERAPEUTICO)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.IDCRENTROTERAPEUTICO)
                </dd>
                <dd>
                <dt>
                    @Html.DisplayNameFor(model => model.actionName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.actionName)
                </dd>
                <dd>
            </dl>
        </div>
        <div class="modal-footer">
            <input type="submit" value="Procesar" class="btn btn-primary" />
            <button type="button" class="btn btn-white" data-dismiss="modal">Cancelar</button>
        </div>
    </div>


}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


