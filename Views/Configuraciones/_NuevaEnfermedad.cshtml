@model SICIApp.Models.CONDICIONFISICA_ENFERMEDADESMODEL

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Nueva Enfermedad</h4>
                <small class="font-bold">Detalle los campos que se piden a continuación.</small>
            </div>
            
                @using (Ajax.BeginForm("NuevaEnfermedad", "Configuraciones", FormMethod.Post, new AjaxOptions
                { 
                    InsertionMode = InsertionMode.Replace,
                    HttpMethod = "POST",
                    UpdateTargetId = "table-elements"
                }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <div class="modal-body">
                            @Html.ValidationSummary(true)

                            <div class="form-group">
                                @Html.LabelFor(model => model.NOMBRECIENTIFICO, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.NOMBRECIENTIFICO)
                                    @Html.ValidationMessageFor(model => model.NOMBRECIENTIFICO)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NOMBRESINOMIMO, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.NOMBRESINOMIMO)
                                    @Html.ValidationMessageFor(model => model.NOMBRESINOMIMO)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.DESCRIPCION, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.DESCRIPCION)
                                    @Html.ValidationMessageFor(model => model.DESCRIPCION)
                                </div>
                            </div>                        
                        </div>
                        <div class="modal-footer">
                            <input type="submit" value="Crear" class="btn btn-primary" />
                            <button type="button" class="btn btn-white" data-dismiss="modal">Cancelar</button>
                        </div>
                    </div>   
                         
            
                }
 

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
